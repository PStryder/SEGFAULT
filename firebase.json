{
  "hosting": {
    "public": "segfault/web",
    "ignore": [
      "firebase.json",
      "**/node_modules/**"
    ],
    "headers": [
      {
        "source": "**",
        "headers": [
          {
            "key": "Strict-Transport-Security",
            "value": "max-age=31536000; includeSubDomains"
          },
          {
            "key": "Content-Security-Policy",
            "value": "upgrade-insecure-requests"
          },
          {
            "key": "X-Content-Type-Options",
            "value": "nosniff"
          }
        ]
      }
    ],
    "rewrites": [
      {
        "source": "/",
        "destination": "/index.html"
      },
      {
        "source": "/spectator",
        "destination": "/spectator.html"
      },
      {
        "source": "/spectator/queue",
        "destination": "/spectator-queue.html"
      },
      {
        "source": "/replay",
        "destination": "/replay.html"
      },
      {
        "source": "/process",
        "destination": "/process.html"
      },
      {
        "source": "/SKILL.md",
        "destination": "/SKILL.md"
      },
      {
        "source": "/donate",
        "destination": "/donate.html"
      }
    ]
  }
}
